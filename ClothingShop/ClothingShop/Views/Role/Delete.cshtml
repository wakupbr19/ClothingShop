@model RoleDetailModel
@{ ViewData["Title"] = "Xóa vai trò"; }

<h1>XÓA VAI TRÒ</h1>
<hr/>
<br/>
<div class="row">
    <div class="col-md-4">
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.RoleName)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.RoleName)
            </dd>
        </dl>
    </div>
</div>
<hr/>
<div class="row justify-content-center">
    <div class="col-sm-2">
        <a class="btn btn-secondary w-100" asp-action="Index">Quay lại</a>
    </div>
    <div class="col-sm-2">
        <button type="button" class="btn btn-danger w-100" data-toggle="modal" data-target="#delete">
            Xóa
        </button>
        <div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="deleteLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteLabel">Xác nhận</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Bạn có chắc chắn xóa vai trò <strong> @Model.RoleName</strong>?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id"/>
                            <input type="submit" value="Xác nhận" class="btn btn-danger btn-block"/>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>