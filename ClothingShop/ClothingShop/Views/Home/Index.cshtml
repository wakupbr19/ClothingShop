    <div class="m-5">
        <h4>
            <strong>SẢN PHẨM BÁN CHẠY</strong>
        </h4>
        <hr/>
        <div class="row card-deck">
            @foreach (var item in HotItems)
            {
                <div class="col-md-2" style="margin-bottom: 15px; margin-top: 15px;">
                    <div class="card">
                        <a asp-action="Details" asp-controller="Product" asp-route-id="@item.ProductId" style="color: #000000; text-decoration: none;">
                            <img src="@Url.Content(item.Image)" class="card-img-top border-bottom" alt="@item.Name" style="margin: auto">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <strong>@item.Name</strong>
                                </h5>
                                <h7 class="card-text">@string.Format("{0:#,#VND;;0VND}", item.Price)</h7>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
}