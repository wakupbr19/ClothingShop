@{
    ViewData["Title"] = "Trang chủ";
    var Categories = ViewBag.Categories;
    var HotItems = ViewBag.HotItems.ItemList;
    var NewItems = ViewBag.NewItems.ItemList;
}
<div class="m-5">
    <h4>
        <strong>DANH MỤC SẢN PHẨM</strong>
    </h4>
    <hr/>
    <div class="row card-deck">
        @foreach (var category in Categories)
        {
            if (category.CategoryId == 19 || category.CategoryId == 20) continue;
            <div class="col-2">
                <a asp-action="Index"
                   asp-controller="Product"
                   asp-route-category="@category.CategoryId">
                    <div class="card bg-light text-dark">
                        <div class="card-body">
                            <h5 class="card-text text-center">
                                <strong>@category.Name</strong>
                            </h5>
                        </div>
                    </div>
                </a>
            </div>
        }
        <div class="col-2">
            <a asp-action="Index"
               asp-controller="Product">
                <div class="card bg-light text-dark">
                    <div class="card-body">
                        <h5 class="card-text text-center">
                            <strong>Toàn bộ sản phẩm</strong>
                        </h5>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
@if (NewItems != null && NewItems.Count != 0)
{
    <div class="m-5">
        <h4>
            <strong>SẢN PHẨM MỚI</strong>
        </h4>
        <hr/>
        <div class="row card-deck">
            @foreach (var item in NewItems)
            {
                <div class="col-md-2" style="margin-bottom: 15px; margin-top: 15px;">
                    <div class="card">
                        <a asp-action="Details" asp-controller="Product" asp-route-id="@item.ProductId" style="color: #000000; text-decoration: none;">
                            <img src="@Url.Content(item.Image)" class="card-img-top border-bottom" alt="@item.Name" style="margin: auto">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <strong>@item.Name</strong>
                                </h5>
                                <h7 class="card-text">@string.Format("{0:#,#VND;;0VND}", item.Price)</h7>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
}

